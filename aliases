# General navigation
alias ..="cd .."
alias ...="cd ../.."
alias h='cd ~'
alias c='clear'

# Laravel
alias art='php artisan'
alias a='art'

# Sail
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias s='sail'

# Project Setup Laravel
alias setupyarn='git reset --hard; git clean -fd; COMPOSER_MEMORY_LIMIT=-1 composer install; yarn install; c; yarn watch'
alias setupnpm='git reset --hard; git clean -fd; COMPOSER_MEMORY_LIMIT=-1 composer install; npm install; c; npm  watch;'

# PHP Testing
alias phpspec='vendor/bin/phpspec'
alias phpunit='vendor/bin/phpunit'
alias paratest='vendor/bin/paratest'
alias p='phpunit'
alias pf='phpunit --filter'
alias fp='paratest'

# Local Dev setup
alias hosts='sudo nano /etc/hosts'

# XDebug
alias xoff='sudo phpdismod -s cli xdebug'
alias xon='sudo phpenmod -s cli xdebug'

# Git
alias gs='git status'

function artisan() {
    php artisan "$@"
}

function new-branch() {
    git branch "$@"
    git checkout "$@"
    git push -u origin "$@"
}

function delete-branch() {
  git branch -d "$@"
  git push origin --delete "$@"
}

function nah() {
  git reset --hard;
  git clean -fd;
  clear;
}

function deploy() {
  git pull
  git add -A;
  git commit -am "$@";
  git push;
}

function wip () {
  git add -A;
  git commit -am "chore: wip" -n
  git push;
}

function pint() {
  ./vendor/bin/pint;
  git add -A;
  git commit -am "chore: laravel pint run" -n;
}
